                                    <table class="datatable" border="1" style="height: 200" style="width: 400">
                                      <tr class="datatable">
                                        <td>ID</td>
                                        <td>Name</td >
                                      </tr>
                                      <%  for (var item of cats) {  %>
                                      <tr class="datatable" onclick="details('<%=item._id%>', '<%=item.name%>')">
